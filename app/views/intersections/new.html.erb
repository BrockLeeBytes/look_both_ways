<h1>Add Intersection</h1>
<div class='row'>
	<div class='col-md-6 col-md-offset-3'>
		<%= form_for @intersection, url: addintersection_path do |f| %>
			<%= f.label :street_one %>
			<%= f.text_field :street_one %>

			<%= f.label :street_two %>
			<%= f.text_field :street_two %>

			<%= f.label :city %>
			<%= f.text_field :city %>

			<%= select_tag :state, options_for_select(@states.collect {|s| [s.postal_code]}) %>

			<%= f.submit 'Create Intersection', class: 'btn btn-primary'  %>
		<% end %>
	</div>
</div>
